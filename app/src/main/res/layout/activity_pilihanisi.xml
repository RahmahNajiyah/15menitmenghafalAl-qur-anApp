<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pilihanisi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2EBF2"
    tools:context="com.rahmahnajiyahimtihan.a15menitmenghafalquran.Pilihanisi">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ttxjdl1"
            android:text="Bismillah"
            android:textSize="28dp"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ikuti langkah berikut ini..."
            android:id="@+id/txtjdl2"
            android:layout_below="@id/ttxjdl1"
            android:textSize="28dp"
            android:textStyle="italic"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text=" 1
  NIAT YANG IKHLAS KARENA ALLAH"
        android:lines="3"
        android:background="@drawable/openbook"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:id="@+id/niat"/>


        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 2
  MENGHAFAL DARI SATU CETAKAN MUSHAF"
            android:lines="3"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/niat"
            android:layout_marginLeft="50dp"
            android:id="@+id/mushaf"/>



        <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text=" 3
   MENYETOR HAFALAN DI HADAPAN QORI YANG MAHIR"
        android:lines="3"
        android:background="@drawable/openbook"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_toRightOf="@id/mushaf"
        android:layout_marginLeft="50dp"
        android:id="@+id/qori"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 4
   MENGHAFAL SETELAH FAJR (SUBUH)"
            android:lines="3"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/qori"
            android:layout_marginLeft="50dp"
            android:id="@+id/fajr"/>

        <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text=" 5
   MEMINIMKAN YANG DIHAFAL"
        android:lines="3"
        android:background="@drawable/openbook"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_toRightOf="@id/fajr"
        android:layout_marginLeft="50dp"
        android:id="@+id/minim"/>

        <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text=" 6
   MEMBACA HAFALAN DI SETIAP KALI SHALAT"
        android:lines="3"
        android:background="@drawable/openbook"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:layout_toRightOf="@id/minim"
        android:layout_marginLeft="50dp"
        android:id="@+id/sholat"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 7
   MURAJA’AH ATAU MENGULANG"
            android:lines="3"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/sholat"
            android:layout_marginLeft="50dp"
            android:id="@+id/murojaah"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 8
   LUANGKAN WAKTU SEPEKAN UNTUK MENGULANG SETELAH HAFAL 1 JUZ"
            android:lines="4"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/murojaah"
            android:layout_marginLeft="50dp"
            android:id="@+id/luangkan"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 9
   JIKA SUDAH HAFAL 1 JUZ, MENGULANG ¼ HAFALAN YANG LALU DITAMBAH 3 AYAT YANG BARU"
            android:lines="4"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/luangkan"
            android:layout_marginLeft="50dp"
            android:id="@+id/jika"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 10
  MEMINIMALISIR MAKAN, BERBICARA DAN TIDUR"
            android:lines="4"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/jika"
            android:layout_marginLeft="50dp"
            android:id="@+id/makan"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text=" 10
  MEMINIMALISIR MAKAN, BERBICARA DAN TIDUR"
            android:lines="4"
            android:background="@drawable/openbook"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_toRightOf="@id/makan"
            android:layout_marginLeft="50dp"
            android:id="@+id/doa"/>


    </RelativeLayout>
</HorizontalScrollView>
